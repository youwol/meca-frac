{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "include": ["src/**/*.ts", "src/**/*.tsx"],
  },
}
